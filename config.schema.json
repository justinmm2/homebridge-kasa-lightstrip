{
  "pluginAlias": "HomebridgeKasaLightstrip",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "Plugin to utilize [python-kasa](https://github.com/python-kasa/python-kasa) to control Kasa Lightstrips",
  "footerDisplay": "For more information, see the [README](https://github.com/steveredden/homebridge-kasa-lightstrip/blob/master/README.md)",
  "schema": {
    "type": "object",
    "properties": {
      "debug": {
        "title": "Enable debug logs",
        "type": "boolean",
	      "default": "",
		    "oneOf": [
		      { "title": "Yes", "enum": ["true"] },
		      { "title": "No", "enum": ["false"] }
		    ]
      },
      "accessories": {
        "title": "Light Strip Accessories",
        "type": "array",
        "required": true,
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "title": "Device Name",
              "placeholder": "Type your device name",
              "type": "string",
              "minLength": 1,
              "required": true
            },
            "ip": {
              "title": "Device IP",
              "placeholder": "Type your device IP address",
              "type": "string",
              "format": "ipv4",
              "required": true
            }
          }
        }
      }
    }
  }
}